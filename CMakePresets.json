{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Default setting",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/mesh_build_cmake/${presetName}",
      "installDir": "${sourceDir}/mesh_build_cmake_install_cmake/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "Yes",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "ninja-release",
      "inherits": "base",
      "hidden": false,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "vs-debug",
      "inherits": "base",
      "hidden": false,
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ]
}
